            <ol class="breadcrumb">

              <li class="breadcrumb-item"><a href="/home">Home</a></li>
              <li class="breadcrumb-item inactive" aria-current="page">Genre: {{genreTitle}}</li>

              <li class="breadcrumb-item active" aria-current="page">Genre: {{genreTitle}}</li>

            </ol>
          </nav>

          <section class="categories p-3">
            <div class="header">
              <h1>{{genreTitle}} Games</h1>
            </div>
          </section>

          {{#if genres}}
          <div class="column">
            <div class="row flex-wrap">
              {{#each genres as |game|}}
              {{> search-result}}
              {{/each}}
            </div>
          </div>
        </div>

        {{else}}
        <div class="container-fluid justify-content-center">
          <div class="row">
            <h3 class="h3-color">Sorry, there are no games in this genre.
            </h3>
          </div>
        </div>
        {{/if}}

    </div>
